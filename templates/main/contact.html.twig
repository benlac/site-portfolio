{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<div class="contact">
    <div class="contact__form">
        {{ form_start(form) }}
        <h2 class="contact__h2">Contactez-moi</h2>
            {{ form_row(form.lastname) }}
            {{ form_row(form.firstname) }}
            {{ form_row(form.company) }}
            {{ form_row(form.email) }}
            {{ form_row(form.message) }}
            <button class="btn-contact btn-contact--form">Envoyer</button>
            {{ form_end(form) }}
    </div>
    <div class="contact__illu">
        <img src="{{ asset('assets/images/contact.png') }}" alt="">
    </div>
</div>

{% endblock %}
